{
  "$schema": "https://json.schemastore.org/swcrc",
  "module": {
    "type": "es6",
    "resolveFully": true
  },
  "jsc": {
    "target": "esnext",
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "experimental": {
      "keepImportAssertions": true
    },
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"],
      "#root/*": ["*"]
    }
  },
  "sourceMaps": true
}
